<h1 id="login_title"><%= t(:forgot_password) %></h1>
<div class="row">
  <%= form_tag password_resets_path, :method => :post, class: "form-inline" do %>
    <div class="control-group">
      <div class="controls"><%= text_field_tag :email, nil, placeholder: t(:email) %></div>
    </div>
    <div class="controls"><%= submit_tag t(:reset_password), class:"btn btn-info" %></div>
  <% end %>
</div>