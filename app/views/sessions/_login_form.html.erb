<h1 id="login_title">Log in to HackChat!</h1>
<div class='row'>
    <%= form_tag sessions_path, class: "form-inline" do %>
      <div class="control-group">
        <div class="controls"><%= text_field_tag :email, nil, :placeholder => t(:email) %></div>
      </div>
      <div class="control-group">
        <div class="controls"><%= password_field_tag :password, nil, placeholder: t(:password) %></div>
      </div>
      <div class="control-group">
        <div class='controls'><%= submit_tag t(:log_in), class:"btn btn-info" %></div>
      </div>
    <% end %>
</div>