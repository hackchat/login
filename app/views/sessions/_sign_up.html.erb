<h1 id="login_title"><%=t :sign_up_header %></h1>
<div class='row'>
  <%= form_for User.new, :validate => true, :html => { class: "form-inline" } do |f| %>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :first_name, placeholder: t(:first_name), class: "input-forms" %>
      </div>
    </div>
    <div class='control-group'>
      <div class="controls">
        <%= f.text_field :last_name, placeholder: t(:last_name), class: "input-forms" %>
      </div>
    </div>
    <div class='control-group'>
      <div class="controls">
        <%= f.text_field :email, placeholder: t(:email), class: "input-forms" %>
      </div>
    </div>
    <div class='control-group'>
      <div class="controls">
        <%= f.password_field :password, placeholder: t(:password), class: "input-forms" %>
      </div>
    </div>
    <div class='control-group'>
      <div class="controls">
        <%= f.password_field :password_confirmation, placeholder: t(:password_confirmation), class: "input-forms" %>
      </div>
    </div>
    <div class="controls"><%= f.submit class:"btn btn-info" %></div>
  <% end %>
</div>