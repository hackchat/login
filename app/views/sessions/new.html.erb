<body class="body">
  <div class="row">
    <div class="span3"></div>
    <div class="span6" id="login_title">
      <h1>Log in to HackChat!</h1>
    </div>
  </div>

  <form class="well_form-inline"><%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag t(:email) %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag t(:password) %>
      <%= password_field_tag :password %>
    </div>
    <div class="field">
      <%= check_box_tag t(:remember_me), 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
    </div>
    <div class="actions"><%= submit_tag t(:log_in) %></div>
  <% end %></form>

  <h4><%= t(:forgot_password) %></h4>
  <%= render 'forgot_password_form' %>
</body>